          <% @users.each do |user| %>
          <tr>
            <td class="h5 text-left">作業者ID : <%= user[:name] %></td>
            <td class="h5 text-left"> <%= user[:login_id] %></td>
            <td class="h5 text-left"> <%= user[:type] %></td>
            <% if user[:display_id] == "display" %>
              <td class="h5 text-center">
                <%= link_to admins_hidden_path(user[:id]),method: :post do%>
                  <span class="btn btn-primary">非表示</span>
                <%end%>
              </td>
            <% else %>
              <td class="h5 text-center">
                <%= link_to admins_display_path(user[:id]),method: :post do%>
                  <span class="btn border-primary">再表示</span>
                <%end%>
              </td>
            <% end %>
          </tr>
          <% end %>
